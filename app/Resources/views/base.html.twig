<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Base title{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('bootstrap-3.3.6/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block nav %}
    <!-- Static navbar -->
    <div class="fixed-top">
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Face de bouc</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li {% if path(app.request.attributes.get('_route')) == "/" %} class="active" {% endif %}><a href="/">Accueil</a></li>
                        <li {% if path(app.request.attributes.get('_route')) == "/search" %} class="active" {% endif %}><a href="{{ path('search') }}">Rechercher des amis</a></li>
                        <li {% if path(app.request.attributes.get('_route')) == "/post" %} class="active" {% endif %}><a href="{{ path('post') }}">Raconte la toi</a></li>
                        <li {% if path(app.request.attributes.get('_route')) == "/list" %} class="active" {% endif %}><a href="{{ path('list') }}">La vie des autres</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="/logout">Logout</a></li>
                        {% else %}
                            <li {% if path(app.request.attributes.get('_route')) == "/signin" %} class="active" {% endif %}><a href="{{ path('signin') }}">Login</a></li>
                        {% endif %}
                            <li {% if path(app.request.attributes.get('_route')) == "/register" %} class="active" {% endif %}><a href="{{ path('register') }}">Register</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    </div>
{% endblock %}

{% block body %}{% endblock %}

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="{{ asset('bootstrap-3.3.6/js/bootstrap.min.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
